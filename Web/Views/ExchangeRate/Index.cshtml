@{

    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Hellla yea</h1>
<div><canvas id="lineChart"></canvas></div>
<canvas id="myChart" width="400" height="400"></canvas>

<div class="container"  id="buyTable"></div>
<div class="container" id="sellTable"></div>
<div class="container" id="bestTable"></div>
<div class="container" id="ticketTable"></div>
<script>
    var ctx = document.getElementById('myChart').getContext('2d');
    var myChart = new Chart(ctx, {
        type: 'bar',
        data: {
            labels: ['Red', 'Blue', 'Yellow', 'Green', 'Purple', 'Orange'],
            datasets: [{
                label: '# of Votes',
                data: [12, 19, 3, 5, 2, 3],
                backgroundColor: [
                    'rgba(255, 99, 132, 0.2)',
                    'rgba(54, 162, 235, 0.2)',
                    'rgba(255, 206, 86, 0.2)',
                    'rgba(75, 192, 192, 0.2)',
                    'rgba(153, 102, 255, 0.2)',
                    'rgba(255, 159, 64, 0.2)'
                ],
                borderColor: [
                    'rgba(255, 99, 132, 1)',
                    'rgba(54, 162, 235, 1)',
                    'rgba(255, 206, 86, 1)',
                    'rgba(75, 192, 192, 1)',
                    'rgba(153, 102, 255, 1)',
                    'rgba(255, 159, 64, 1)'
                ],
                borderWidth: 1
            }]
        },
        options: {
            scales: {
                yAxes: [{
                    ticks: {
                        beginAtZero: true
                    }
                }]
            }
        }
    });

    $.ajax({
        type: 'GET',
        //data: requestData,
        url: '/ExchangeRate/BuyTable',
        cache: false,
        success: function (result) {
            $("#buyTable").html(result);
        },
        error: function (xhr, status, error) {
            Console.log(error);
        }
    });

    $.ajax({
        type: 'GET',
        url: '/ExchangeRate/SellTable',
        cache: false,
        success: function (result) {
            $("#sellTable").html(result);
        },
        error: function (xhr, status, error) {
            Console.log(error);
        }
    });

    $.ajax({
        type: 'GET',
        url: '/ExchangeRate/BestOfDateTable',
        cache: false,
        success: function (result) {
            $("#bestTable").html(result);
        },
        error: function (xhr, status, error) {
            Console.log(error);
        }
    });
    $.ajax({
        type: 'GET',
        url: '/ExchangeRate/TicketTable?bankName=CNB',
        cache: false,
        success: function (result) {
            $("#ticketTable").html(result);
        },
        error: function (xhr, status, error) {
            Console.log(error);
        }
    });
</script>



