@model Web.Models.BankMarginModel
@{
    var guid = Guid.NewGuid();
    var canvasId = Guid.NewGuid();
}
<div class="row p-3" id="@guid.ToString()">
    <div class="col m-0 p-0">
        <div class="row justify-content-end">
            <div class="col-1 m-0 p-0 d-flex  justify-content-end p-2 ">
                <div class="btn btn-outline-primary equationButton  justify-content-center align-items-center d-flex" style="width: 20pt; height: 20pt;" onclick="window.downloadFile($('#@guid').find('.noteText').html())">EQ</div>
            </div>

            <div class="col-1 m-0 p-0 d-flex justify-content-end p-2">
                <div class="btn btn-outline-info justify-content-center align-items-center d-flex" style="width: 20pt; height: 20pt; font-size: 1.9em;" onclick="App.toggleGraphSize(this, $('#@canvasId').parent(), $('#@guid').parent());">&uarr;</div>
            </div>
            <div class="col-1 m-0 p-0 d-flex justify-content-end p-2">
                <div class="btn btn-outline-danger justify-content-center align-items-center d-flex" style="width: 20pt; height: 20pt;" onclick="App.removeBankMargin('@guid');">X</div>
            </div>

        </div>
        <div class="row">
            <div class="col m-0 p-0">
                <div class="chart-container" style="position: relative; ">
                    <canvas id="@canvasId" width="350"></canvas>
                </div>
            </div>
        </div>
        <div class="row" style="display: none">
            <div class="noteText">

            </div>
        </div>
    </div>
</div>

<script>
    App.addActiveMargin('@guid', '@canvasId', '@Model.Currency', '@Model.BankName', '@Model.IsBuy',@Html.Raw(Json.Serialize(Model.Start)), @Html.Raw(Json.Serialize(Model.End)) );
</script>


